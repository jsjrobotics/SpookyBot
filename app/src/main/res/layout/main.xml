<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/bot_photo"
        android:layout_width="@dimen/bot_photo_size"
        android:layout_height="@dimen/bot_photo_size" />

    <TextView
        android:id="@+id/bot_description"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bot_photo_size"
        android:layout_toRightOf="@id/bot_photo"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/sensors_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/effectors_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>